{
  "name": "ffc-demo-web",
  "description": "Digital service mock to claim public money in the event property subsides into mine shaft.",
  "version": "0.0.1",
  "homepage": "https://github.com/DEFRA/ffc-demo-web",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ffc-demo-web.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "npm run build:css",
    "build:css": "node-sass --output-style=expanded --output=server/public/build/stylesheets client/sass",
    "build:css-watch": "node-sass --output-style=expanded --output=server/public/build/stylesheets --watch client/sass",
    "pretest": "npm run test:lint",
    "test": "npm run test:unit",
    "test:lint": "standard",
    "test:unit": "jest",
    "unit:watch": "jest --coverage=false --onlyChanged --watch",
    "start": "npm-run-all --parallel build:css-watch start:nodemon",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch index.js"
  },
  "author": "Defra DDTS",
  "contributors": [
    "John Watson john.watson2@rpa.gov.uk",
    "Mark Harrop mark.harrop@defra.gov.uk",
    "Matthew Collins matthew.collins@defra.gov.uk",
    "David Bingham david.bingham@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/catbox-redis": "^5.0.5",
    "@hapi/hapi": "^18.4.0",
    "@hapi/hoek": "^8.3.0",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^16.1.7",
    "@hapi/vision": "^5.5.4",
    "@hapi/wreck": "^15.1.0",
    "@hapi/yar": "^9.2.1",
    "govuk-frontend": "^3.2.0",
    "moment": "^2.24.0",
    "nunjucks": "^3.2.0"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^4.1.1",
    "@hapi/good": "^8.2.3",
    "@hapi/good-console": "^8.1.2",
    "@hapi/good-squeeze": "^5.2.1",
    "blipp": "^4.0.1",
    "jest": "^24.9.0",
    "jest-junit": "^8.0.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "standard": "^14.3.1"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  }
}
