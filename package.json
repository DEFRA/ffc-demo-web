{
  "name": "ffc-demo-web",
  "description": "Digital service mock to claim public money in the event property subsides into mine shaft.",
  "version": "4.13.0",
  "homepage": "https://github.com/DEFRA/ffc-demo-web",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ffc-demo-web.git"
  },
  "main": "app/index.js",
  "scripts": {
    "build": "npm run build:css && npm run webpack",
    "build:css": "node-sass --output=app/static/stylesheets --output-style=expanded app/static/stylesheets",
    "build:css-watch": "node-sass --output=app/static/stylesheets --output-style=expanded --source-map true --watch app/static/stylesheets",
    "pretest": "npm run test:lint",
    "test": "jest --runInBand",
    "test:integration": "jest --testPathPattern=test/integration",
    "test:unit": "jest --testPathPattern=test/unit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:unit-watch": "jest --testPathPattern=test/unit --coverage=false --onlyChanged --watch",
    "test:lint": "standard",
    "start:watch": "npm-run-all --parallel build:css-watch start:nodemon",
    "start:nodemon": "nodemon --inspect=0.0.0.0 --ext css,js,njk --legacy-watch app/index.js",
    "webpack": "webpack"
  },
  "author": "Defra DDTS",
  "contributors": [
    "John Watson john.watson2@rpa.gov.uk",
    "Mark Harrop mark.harrop@defra.gov.uk",
    "Matthew Collins matthew.collins@defra.gov.uk",
    "David Bingham david.bingham@defra.gov.uk",
    "Paul Andrews paul.andrews@defra.gov.uk",
    "Fay Toward fay.toward@rpa.gov.uk",
    "Neil McLaughlin neil.mclaughlin@defra.gov.uk",
    "Steve Hunt steven.hunt@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/ms-rest-nodeauth": "^3.0.5",
    "@azure/service-bus": "^1.1.9",
    "@hapi/bell": "^12.1.0",
    "@hapi/catbox-redis": "^6.0.1",
    "@hapi/cookie": "^11.0.1",
    "@hapi/hapi": "^19.2.0",
    "@hapi/hoek": "^9.0.4",
    "@hapi/inert": "^6.0.1",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.0",
    "@hapi/wreck": "^17.0.0",
    "@hapi/yar": "^10.1.0",
    "applicationinsights": "^1.8.2",
    "govuk-frontend": "^3.7.0",
    "moment": "^2.27.0",
    "nunjucks": "^3.2.2"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "^5.0.0",
    "@hapi/good": "^9.0.0",
    "@hapi/good-console": "^9.0.0",
    "@hapi/good-squeeze": "^6.0.0",
    "blipp": "^4.0.1",
    "css-loader": "^4.2.1",
    "jest": "^26.1.0",
    "jest-junit": "^11.1.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "standard": "^14.3.4",
    "style-loader": "^1.2.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "nodemonConfig": {
    "ignore": [
      "test-output/**"
    ]
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll",
      "browser",
      "it",
      "expect",
      "describe",
      "jest",
      "beforeEach",
      "assert",
      "$"
    ]
  }
}
